  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_for(@article, html: {class: 'form-horizontal', multipart: true}) do |f| %>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
        <p>
          <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
        </p>
        <p>
          <%= f.text_area :body, class: "form-control", placeholder: "Body" %>
        </p>
        <p>
          <%= f.text_field :tag_list, class: "form-control", placeholder: "Tag List" %>
        </p>
        <p>
          <% if @article.image.exists? %>
            <%= image_tag @article.image.url %><br />
          <% end %>
          <%= f.label :image, "Attach an image" %><br />
          <%= f.file_field :image %>
        </p>
        <p>
          <%= f.submit class: "btn btn-default" %>
        </p>
      <% end %>
    </div>
  </div>
